{
    "manifest_version": 3,
    "name": "Promptify",
    "version": "1.0",
    "description": "Transform vague prompts into professional engineering specifications.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.chatgpt.com/*",
        "https://*.claude.ai/*",
        "https://*.perplexity.ai/*",
        "https://*.gemini.google.com/*",
        "https://copilot.microsoft.com/*",
        "http://localhost:8000/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.chatgpt.com/*",
                "https://*.claude.ai/*",
                "https://*.perplexity.ai/*",
                "https://*.gemini.google.com/*",
                "https://copilot.microsoft.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}